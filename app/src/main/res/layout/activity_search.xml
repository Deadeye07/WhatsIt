<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SearchActivity" android:id="@+id/activitySearch">

    <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="371dp"
            android:layout_height="219dp" app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">

        <ScrollView
                android:layout_width="355dp"
                android:layout_height="212dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                android:background="@color/grey"
                app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/ebayTile">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:orientation="horizontal" android:id="@+id/ebayMainTileLayout">
                <LinearLayout android:layout_width="121dp" android:layout_height="match_parent"
                              android:orientation="vertical" android:id="@+id/ebayTileLayout">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="52dp">
                        <TextView
                                android:text="Low"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                                app:layout_constraintTop_toBottomOf="@+id/textView3"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/lowPrice" app:layout_constraintStart_toEndOf="@+id/textView5"
                                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                                app:layout_constraintTop_toBottomOf="@+id/highPrice"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="56dp">
                        <TextView
                                android:text="Average"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                                app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/ebayAverage" app:layout_constraintStart_toEndOf="@+id/textView"
                                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="@+id/ebayTile"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="High"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/ebayTile"
                                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                                app:layout_constraintTop_toBottomOf="@+id/textView"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="15dp"
                                android:id="@+id/highPrice" app:layout_constraintStart_toEndOf="@+id/textView3"
                                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/ebayTile"
                                android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                                app:layout_constraintTop_toBottomOf="@+id/ebayAverage"/>
                    </LinearLayout>
                </LinearLayout>
                <com.jjoe64.graphview.GraphView
                        android:layout_width="212dp"
                        android:layout_height="197dp"
                        android:id="@+id/miniGraph" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/toolbar" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"/>
            </LinearLayout>

        </ScrollView>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>